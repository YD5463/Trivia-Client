<Window x:Class="Client.Forgot_Password_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Forgot_Password_Window" Height="270" Width="400">
    <Canvas>
        <TextBlock FontSize="15" Canvas.Left="28" Canvas.Top="58">Enter your email and your password will sent to you</TextBlock>
        <TextBox FontSize="15" Name="usernameTextBox" TextWrapping="Wrap" Canvas.Left="83" Canvas.Top="102" Width="238" Height="35"/>
        <Button FontSize="18" Canvas.Left="136" Canvas.Top="167" Width="126" Height="30">Submit</Button>
        <Button Click="BackClick">Back to main</Button>
    </Canvas>
</Window>
